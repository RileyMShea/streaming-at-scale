{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ehNsName": {
            "defaultValue": "[concat('ehns', uniqueString(resourceGroup().id))]",
            "type": "string",
            "metadata": {
                "description": "Event Hubs namespace name"
            }
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "string",
            "metadata": {
                "description": "Event Hubs location"
            }
        },
        "ehName": {
            "defaultValue": "[concat('ehIn', uniqueString(resourceGroup().id))]",
            "type": "string",
            "metadata": {
                "description": "Event Hub name"
            }
        }
    },
    "variables": {
        "ehFullName": "[concat(parameters('ehNsName'), '/', parameters('ehName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.EventHub/namespaces",
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 1
            },
            "name": "[parameters('ehNsName')]",
            "apiVersion": "2017-04-01",
            "location": "[parameters('location')]",
            "tags": {},
            "scale": null,
            "properties": {
                "isAutoInflateEnabled": true,
                "maximumThroughputUnits": 20
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "name": "[variables('ehFullName')]",
            "apiVersion": "2017-04-01",
            "location": "[parameters('location')]",
            "scale": null,
            "properties": {
                "messageRetentionInDays": 1,
                "partitionCount": 2,
                "status": "Active"
            },
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('ehNsName'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/authorizationRules",
            "name": "[concat(variables('ehFullName'), '/send')]",
            "apiVersion": "2017-04-01",
            "location": "[parameters('location')]",
            "scale": null,
            "properties": {
                "rights": [
                    "Send"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('ehNsName'))]",
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', parameters('ehNsName'), parameters('ehName'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/authorizationRules",
            "name": "[concat(variables('ehFullName'), '/listen')]",
            "apiVersion": "2017-04-01",
            "location": "[parameters('location')]",
            "scale": null,
            "properties": {
                "rights": [
                    "Listen"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('ehNsName'))]",
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', parameters('ehNsName'), parameters('ehName'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "name": "[variables('ehFullName')]",
            "apiVersion": "2017-04-01",
            "location": "[parameters('location')]",
            "scale": null,
            "properties": {
                "messageRetentionInDays": 1,
                "partitionCount": 2,
                "status": "Active"
            },
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('ehNsName'))]"
            ]
        }
    ],
    "outputs": {
        "ehNsName": {
            "value": "[parameters('ehNsName')]",
            "type": "string"
        },
        "ehName": {
            "value": "[parameters('ehName')]",
            "type": "string"
        }
    }
}